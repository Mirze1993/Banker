@model Banker.Model.Kredit
@{
    ViewData["Title"] = "Start";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!--header-->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Prosess Info</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-6">
                    Initiator: @Model.Initiator <br />
                    Responsible: @Model.Responsible<br />
                </div>
                <div class="col-sm-6">
                    Startable Date: @Model.StartDate
                </div>
            </div>
        </div>
    </div>

    <!--main-->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Prosess</h3>
        </div>
        <form method="post" asp-controller="Kredit" asp-action="Step1" >
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Name">Ad:</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Amount">Məbləğ:</label>
                    <input asp-for="Amount" class="form-control" />
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Növbəti</button>
            </div>
        </form>
    </div>


</div><!-- /.container-fluid -->
